! Enabled modi
rofi.modi:                           run

! Window opacity
rofi.opacity:                        85

! Window width
rofi.width:                          100

! Number of lines
rofi.lines:                          4

! Font to use
rofi.font:                           Source Code Pro 18

! Color scheme for normal row
rofi.color-normal:                   #2f343f,#cccccc,#2f343f,#2f343f,#f99157

! Color scheme for active row
rofi.color-active:                   #2f343f,#0000ff,#2f343f,#f3f4f5,#ffffff

! Color scheme window
