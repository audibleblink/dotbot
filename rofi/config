! Padding
rofi.padding:                        200

! Y-offset relative to location
rofi.yoffset:                        -10

! Terminal to use
rofi.terminal:                       urxvt

! Run command to execute
rofi.run-command:                    {cmd}

! Row height (in chars)
rofi.eh:                             3

! Do a more fuzzy matching
rofi.fuzzy:                          true

! Separator style (none, dash, solid)
rofi.separator-style:                none

! Hide scroll-bar
rofi.hide-scrollbar:                 true

